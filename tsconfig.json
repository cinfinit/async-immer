{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,

    "declaration": true,
    "declarationMap": true,

    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
